<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span6">
   <p>
      <%= image_tag @movie.image.url(:medium) %>
    </p>
    <p>
      <strong>Title:</strong>
      <%= @movie.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @movie.description %>
    </p>

    <p>
      <strong>Movie length:</strong>
      <%= @movie.movie_length %>
    </p>

    <p>
      <strong>Director:</strong>
      <%= @movie.director %>
    </p>

    <p>
      <strong>Rating:</strong>
      <%= @movie.rating %>
    </p>
    
    <p><%= link_to 'New review', new_movie_review_path(@movie), class:"btn btn-default"  %></p>
    <%= link_to 'Edit', edit_movie_path(@movie) %> |
    <%= link_to 'Back', movies_path %>
    
 </div>
 <div class="span6">
     <% if @reviews.blank? %>
         <h2>No reviews. Write a new review</h2>
         <p><%= link_to 'New review', new_movie_review_path(@movie), class:"btn btn-default"  %></p>
     <% else %>
         <% @reviews.each do |review| %>
             <p><%= review.rating %></p>
             <p><%= review.comment %></p>
         <% end %>
     <% end %>
 </div>
</div>
